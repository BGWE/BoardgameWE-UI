{
  "name": "boardgame-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "yarn watch-translations & vue-cli-service serve",
    "build": "npm run translations2json && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "watch-translations": "onchange -i 'src/locales/translations.csv' -- yarn translations2json",
    "translations2json": "i18n-csv2json-cli --from src/locales/translations.csv --to src/locales/json --format"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "buefy": "^0.7.2",
    "moment-timezone": "^0.5.23",
    "vue": "^2.5.22",
    "vue-i18n": "^8.8.2",
    "vue-router": "^3.0.2",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "i18n-csv2json-cli": "^1.0.2",
    "node-sass": "^4.11.0",
    "onchange": "^5.2.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^3.0.0 || ^4.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
